@model List<Project2BurgerMenu.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">
                 <code>Kategori ile ilgili islemleri bu sayfada yapabilirsiniz..</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kategori Id</th>
                            <th>Kateagori Adi</th>
                            <th>Kategori Ürünleri</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td> <a href="#" class="btn btn-warning">Kategori Ürünleri</a> </td>
                                <td> <a href="#" class="btn btn-danger">Sil</a> </td>
                                <td> <a href="#" class="btn btn-success">Güncelle</a> </td>

                            </tr>
                        }

                    </tbody>
                </table>
                <a href="#" class="btn btn-primary">Yeni Kategori Girisi</a>
                
            </div>
        </div>
    </div>
</div>
